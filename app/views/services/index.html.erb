<p id="notice"><%= notice %></p>

<h1 class="h1">Services</h1>

<table class="table-hover table-responsive">
  <thead>
    <tr>
      <th>Service date</th>
      <th>Service Request</th>
      <th>Service Area</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.sr_date %></td>


        <td><%= service.service_request.service_request %></td>
        <td><%= service.service_request.service_area.service_area %></td>
        <td><%= link_to 'Show', service %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

