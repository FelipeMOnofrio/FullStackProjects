<!DOCTYPE html>
<html>
  <head>
    <title>Winnipeg City</title>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>
  <body>
<header id="header" class="navbar-header top">
  <div id="top-menu-container">
    <div id="header-wrap">
      <div class="container clearfix">
        <div id="primary-menu-trigger">
          <i class="fa fa-reorder"></i>
        </div>

        <!-- Primary Navigation  -->
        <nav id="primary-menu">

          <ul class="main-menu navbar list-inline">


              <li class="current has-sub-menu">
                <%= link_to 'Parking Contraventions', root_path + 'parking_contraventions' %>
              </li>

              <li class="has-sub-menu">
                <%= link_to 'Violations', root_path + 'violations' %>
              </li><!-- /.has-sub-menu -->

              <li class="has-sub-menu">
                <%= link_to 'Services',root_path + 'services' %>
              </li><!-- /.has-sub-menu -->

              <li class="has-sub-menu">
                <%= link_to 'Service Areas', root_path + 'service_areas' %>
              </li><!-- /.has-sub-menu -->

              <li class="mega-menu">
                <%= link_to 'Service Request',root_path + 'service_requests' %>
              </li><!-- /.mega-menu -->

              <li class="mega-menu">
                <%= link_to 'Neighbourhoods',root_path + 'neighbourhoods' %>
              </li><!-- /.mega-menu -->

              <li>
                <%= link_to 'Wards',root_path + 'wards'%>
              </li>
            </ul><!-- /.main-menu -->

          <div id="top-search">
            <a href="#" id="top-search-trigger" class="hd-icons">
              <i class="fa fa-search"></i>
              <i class="fa fa-close"></i>
            </a>

              <%= form_tag(search_path, method: "get") do %>
                <%= text_field_tag(:q, "search here!") %>
                <%= submit_tag("Search") %>
              <% end %>
          </div>
</nav>
      </div>
    </div>
  </div>
</header>
<div class="clearfix"></div>
<section class="clearfix nav-section body">
  <%= yield %>
</section>

<script>
    jQuery("#top-search-trigger").click(function(e){
jQuery('body').toggleClass('top-search-open');
jQuery('#top-cart').toggleClass('top-cart-open', false);
e.stopPropagation();
e.preventDefault();
});

jQuery('#primary-menu-trigger').click(function() {
    jQuery( '#primary-menu > ul, #primary-menu > div > ul' ).toggleClass("show");
    return false;
});

var windowWidth = jQuery(window).width();
if ( windowWidth > 950 & windowWidth < 1200) {
    jQuery("#primary-menu ul li.mega-menu .mega-menu-content").css({"width" : windowWidth - 30});
}
</script>
  </body>
</html>