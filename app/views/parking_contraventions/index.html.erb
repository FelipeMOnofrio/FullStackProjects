<p id="notice"><%= notice %></p>

<h1 class="h1">Parking Contraventions</h1>
<table class="table-hover table-responsive">
  <thead>
    <tr class="panel">
      <th>Issue date</th>
      <th>Violation</th>
      <th>Ticket number</th>
      <th>Street</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parking_contraventions.each do |parking_contravention| %>
      <tr>
        <td><%= parking_contravention.issue_date %></td>
        <td><%= parking_contravention.violation.violation  %></td>

        <td><%= parking_contravention.ticket_number %></td>
        <td><%= parking_contravention.street %></td>
        <td><%= link_to 'Show', parking_contravention %></td>
        <td><%= link_to 'Edit', edit_parking_contravention_path(parking_contravention) %></td>
        <td><%= link_to 'Destroy', parking_contravention, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

